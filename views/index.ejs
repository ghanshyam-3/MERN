<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen flex justify-center items-start p-6">
  <div class="w-full max-w-2xl bg-white shadow-lg rounded-lg p-6">

    <!-- Form -->
    <div class="mb-6">
      <form action="/create" method="post" class="flex flex-col gap-4">
        <input type="text" placeholder="Title goes here" name="title"
          class="border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
        <textarea placeholder="Write your task" name="details" id=""
          class="border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        <input type="submit" value="Create Task"
          class="bg-blue-600 text-white rounded-lg py-2 px-4 hover:bg-blue-700 cursor-pointer">
      </form>
    </div>

    <!-- Tasks -->
    <div class="flex flex-col gap-4">
      <% if (filess.length > 0) { %>
        <% filess.forEach(function(val) { %>
          <div class="p-4 border border-gray-200 rounded-lg shadow-sm bg-gray-50">
            <h1 class="text-lg font-semibold text-gray-800"><%= val %></h1>
            <a href="/file/<%= val %>" class="text-blue-600 hover:underline text-sm">Read More</a>
            <a href="/edit/<%= val %>" >Edit Filename</a>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-gray-500 text-center">No task yet.</h3>
      <% } %>
    </div>

  </div>
</body>

</html>
